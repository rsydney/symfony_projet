{% block body %}
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            /* Global styles */
            body {
                font-family: 'Arial', sans-serif;
                margin: 0;
                padding: 0;
                background: #f0f0f0;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
            }

            /* Container */
            .container {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100%;
            }

            /* Login box styles */
            .login-box {
                background: #fff;
                padding: 40px;
                border-radius: 8px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                width: 300px;
                text-align: center;
            }

            h2 {
                margin-bottom: 30px;
                font-size: 24px;
                color: #333;
            }

            /* Input field styles */
            .textbox {
                margin-bottom: 20px;
            }

            .textbox input {
                width: 100%;
                padding: 12px;
                margin: 8px 0;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 16px;
                box-sizing: border-box;
            }

            .textbox input:focus {
                border-color: #007bff;
                outline: none;
            }

            /* Button container */
            .button-container {
                margin-top: 20px;
            }

            button {
                width: 100%;
                padding: 12px;
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 5px;
                font-size: 16px;
                cursor: pointer;
            }

            button:hover {
                background-color: #0056b3;
            }
        </style>
    </head>

    <div class="container">
        <div class="login-box">
            <h2>Se connecter</h2>

            {{ form_start(form) }}
                <div class="textbox">
                    {{ form_row(form.login) }}
                </div>
                <div class="textbox">
                    {{ form_row(form.password) }}
                </div>
                <div class="button-container">
                    <button type="submit">Se connecter</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

